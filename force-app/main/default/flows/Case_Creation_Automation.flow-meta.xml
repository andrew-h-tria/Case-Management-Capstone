    <actionCalls>
        <description>Sends escalation alert for High Priority cases.</description>
        <name>Send_Supervisor_Email</name>
        <label>Send Supervisor Email</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <actionName>Case.Case_Priority_Escalation_Alert</actionName>
        <actionType>emailAlert</actionType>
        <connector>
            <targetReference>Create_Case_Activity_Log</targetReference>
        </connector>
        <flowTransactionModel>CurrentTransaction</flowTransactionModel>
        <inputParameters>
            <name>SObjectRowId</name>
            <value>
                <elementReference>$Record.Id</elementReference>
            </value>
        </inputParameters>
        <nameSegment>Case.Case_Priority_Escalation_Alert</nameSegment>
    </actionCalls>
    <apiVersion>65.0</apiVersion>
    <decisions>
        <description>Evaluates if the case is High Priority and if the priority has changed, ensuring supervisor notifications only fire when necessary.</description>
        <name>Check_for_High_Priority_Escalation</name>
        <label>Check for High Priority Escalation</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <defaultConnectorLabel>Priority is NOT High</defaultConnectorLabel>
        <rules>
            <name>Priority_is_High</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Priority</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>High</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Send_Supervisor_Email</targetReference>
            </connector>
            <doesRequireRecordChangedToMeetCriteria>true</doesRequireRecordChangedToMeetCriteria>
            <label>Priority is High</label>
        </rules>
    </decisions>
